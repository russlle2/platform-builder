{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@platform-builder/ui-components": [
        "../../packages/ui-components/src"
      ],
      "@platform-builder/utils": [
        "../../packages/utils/src"
      ]
    },
    "jsx": "preserve"
  },
  "include": [
    "src",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
